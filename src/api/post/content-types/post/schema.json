{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "subtitle": {
      "type": "string"
    },
    "publish_date": {
      "type": "date"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Article",
        "Episode"
      ],
      "default": "Article"
    },
    "episode_number": {
      "type": "integer"
    },
    "summary": {
      "type": "customField",
      "options": {
        "output": "HTML",
        "preset": "standard"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "body": {
      "type": "customField",
      "options": {
        "output": "HTML",
        "preset": "standard"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "blocks.rich-text",
        "blocks.code-block",
        "blocks.interactive-embed"
      ]
    },
    "html_file": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    },
    "authors": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::author.author"
    },
    "podcast_show": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::podcast-show.podcast-show",
      "inversedBy": "posts"
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "posts"
    },
    "channel": {
      "displayName": "Channel",
      "type": "component",
      "repeatable": true,
      "component": "cat.channel"
    },
    "credits": {
      "type": "customField",
      "options": {
        "output": "HTML",
        "preset": "standard"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "related_posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post.post"
    },
    "discourse_topic_id": {
      "type": "integer"
    }
  }
}
